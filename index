"use client";

import React, { useState, useRef, useEffect } from 'react';
import { ShieldAlert, Settings, Moon, Terminal, Zap, Globe } from 'lucide-react';

export default function AgenteOps() {
  const [auth, setAuth] = useState(false);
  const [mon, setMon] = useState(false);
  const [eco, setEco] = useState(false);
  const [plate, setPlate] = useState("");
  const [keys, setKeys] = useState({ gemini: "", tgToken: "", tgChat: "" });
  const [logs, setLogs] = useState<string[]>([]);
  const [showSet, setShowSet] = useState(false);
  const [geo, setGeo] = useState({ x: 50, y: 50 });

  const vRef = useRef<HTMLVideoElement>(null);
  const cRef = useRef<HTMLCanvasElement>(null);

  const addLog = (m: string) => setLogs(p => [`[${new Date().toLocaleTimeString()}] ${m}`, ...p].slice(0, 8));

  // Protocolo GPS para o iPhone
  useEffect(() => {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition((pos) => {
        const xPos = ((pos.coords.longitude + 180) * 100) / 360;
        const yPos = ((-pos.coords.latitude + 90) * 100) / 180;
        setGeo({ x: xPos, y: yPos });
        addLog(`GPS_LOCKED: QUADRANTE_CAMPOS`);
      });
    }
  }, [auth]);

  const start = async () => {
    if (!plate || !keys.gemini) return addLog("ERRO: CHAVE_OU_ALVO_AUSENTE");
    setMon(true);
    try {
      const s = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
      if (vRef.current) vRef.current.srcObject = s;
      addLog("UPLINK_ESTABELECIDO");
    } catch { setMon(false); addLog("ERRO_HARDWARE"); }
  };

  const scan = async () => {
    if (!vRef.current || !cRef.current || !keys.gemini) return;
    const ctx = cRef.current.getContext('2d');
    cRef.current.width = vRef.current.videoWidth;
    cRef.current.height = vRef.current.videoHeight;
    ctx?.drawImage(vRef.current, 0, 0);
    const b64 = cRef.current.toDataURL('image/jpeg', 0.4).split(',')[1];

    try {
      const r = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${keys.gemini}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ contents: [{ parts: [{ text: "Extraia a placa do carro ou NULL" }, { inline_data: { mime_type: "image/jpeg", data: b64 } }] }] })
      });
      const d = await r.json();
      const txt = d.candidates[0].content.parts[0].text.trim().toUpperCase();
      if (txt !== "NULL") {
        addLog(`DETETADO: ${txt}`);
        if (txt.includes(plate.toUpperCase())) {
          addLog("!!! ALVO LOCALIZADO !!!");
          window.speechSynthesis.speak(new SpeechSynthesisUtterance(`Alvo localizado`));
        }
      }
    } catch { console.log("SCAN_ERR"); }
  };

  useEffect(() => {
    const i = mon ? setInterval(scan, 5000) : null;
    return () => { if (i) clearInterval(i); };
  }, [mon, plate]);

  if (!auth) return (
    <div className="min-h-screen bg-[#020405] flex flex-col items-center justify-center p-8 font-mono text-blue-900 relative overflow-hidden">
      {/* MAPA MUNDI EM ROTAÇÃO */}
      <div className="absolute inset-0 opacity-10 transition-all duration-[4000ms] scale-[4]"
        style={{ backgroundImage: `url('https://upload.wikimedia.org/wikipedia/commons/e/ec/World_map_blank_without_borders.svg')`, backgroundPosition: `${geo.x}% ${geo.y}%`, backgroundSize: 'cover', filter: 'invert(1) sepia(1) saturate(5) hue-rotate(190deg)' }}
      />
      <ShieldAlert size={60} className="mb-6 animate-pulse z-10" />
      <h1 className="tracking-[0.8em] text-[10px] mb-12 uppercase font-black z-10">Central Intelligence</h1>
      <input type="password" placeholder="PASSWORD: 0000" onChange={e => e.target.value === "0000" && setAuth(true)} className="bg-black/90 border border-blue-950 p-4 text-center text-blue-500 outline-none z-10" />
    </div>
  );

  return (
    <div className={`min-h-screen ${eco ? 'bg-black' : 'bg-[#020405]'} text-blue-500 font-mono p-4 flex flex-col items-center`}>
      <div className="w-full max-w-md space-y-4">
        <div className="flex justify-between items-center border-b border-blue-900/20 pb-2 text-[9px]">
          <div className="flex items-center gap-2"><Globe size={12}/> OPS_STATION_ALPHA</div>
          <button onClick={() => setShowSet(!showSet)}><Settings size={16}/></button>
        </div>

        {showSet && (
          <div className="grid gap-2 p-3 bg-black border border-blue-950 text-[9px]">
            <input type="password" placeholder="GEMINI_KEY" className="bg-transparent border-b border-blue-900 p-1" value={keys.gemini} onChange={e => setKeys({...keys, gemini: e.target.value})} />
            <input type="text" placeholder="TG_TOKEN" className="bg-transparent border-b border-blue-900 p-1" value={keys.tgToken} onChange={e => setKeys({...keys, tgToken: e.target.value})} />
            <input type="text" placeholder="TG_CHAT" className="bg-transparent border-b border-blue-900 p-1" value={keys.tgChat} onChange={e => setKeys({...keys, tgChat: e.target.value})} />
          </div>
        )}

        <input placeholder="PLACA_ALVO" className="w-full bg-[#05080a] border border-blue-900/30 p-6 text-center text-3xl tracking-[0.4em] outline-none text-blue-400 uppercase" value={plate} onChange={e => setPlate(e.target.value)} />

        <div className="relative aspect-video bg-black border border-blue-900/10 rounded overflow-hidden">
          <video ref={vRef} autoPlay playsInline className="w-full h-full object-cover opacity-40 grayscale contrast-[1.2]" />
          <canvas ref={cRef} className="hidden" />
          {mon && <div className="absolute top-3 left-3 text-[8px] text-red-800 animate-pulse"><Zap size={8}/> SATELLITE_LINK_ON</div>}
        </div>

        <button onClick={mon ? () => setMon(false) : start} className={`w-full py-5 font-black border ${mon ? 'border-red-900 text-red-900' : 'border-blue-900 text-blue-600'}`}>
          {mon ? "DESLIGAR" : "ATIVAR SCANNER"}
        </button>

        <div className="bg-black/40 border border-blue-950/20 p-4 h-32 overflow-hidden text-[9px] text-blue-900/60 italic">
          <div className="flex items-center gap-2 mb-2 border-b border-blue-900/10 pb-1 font-bold"><Terminal size={10}/> CHRONICLE</div>
          {logs.map((l, i) => <div key={i}>{l}</div>)}
        </div>
      </div>
    </div>
  );
}
