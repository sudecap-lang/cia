"use client";

import React, { useState, useRef, useEffect } from 'react';
import { ShieldAlert, Settings, Moon, Terminal, Zap, Globe } from 'lucide-react';

export default function CIA_PlateWatcher_GPS() {
  const [auth, setAuth] = useState(false);
  const [mon, setMon] = useState(false);
  const [eco, setEco] = useState(false);
  const [plate, setPlate] = useState("");
  const [keys, setKeys] = useState({ gemini: "", tgToken: "", tgChat: "" });
  const [logs, setLogs] = useState<string[]>([]);
  const [showSet, setShowSet] = useState(false);
  const [geo, setGeo] = useState({ x: 50, y: 50 }); // Coordenadas iniciais

  const vRef = useRef<HTMLVideoElement>(null);
  const cRef = useRef<HTMLCanvasElement>(null);

  const addLog = (m: string) => setLogs(p => [`[${new Date().toLocaleTimeString()}] ${m}`, ...p].slice(0, 8));

  // --- PROTOCOLO DE GPS NATIVO ---
  useEffect(() => {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition((pos) => {
        const lon = pos.coords.longitude;
        const lat = pos.coords.latitude;
        // Mapeamento matemático para posição do background (Mercator)
        const xPos = ((lon + 180) * 100) / 360;
        const yPos = ((-lat + 90) * 100) / 180;
        setGeo({ x: xPos, y: yPos });
        addLog(`GPS_LOCKED: ${lat.toFixed(4)}, ${lon.toFixed(4)}`);
      }, () => addLog("GPS_ERROR: PERMISSION_DENIED"));
    }
  }, [auth]);

  const start = async () => {
    if (!plate || !keys.gemini) return addLog("REJECTED: MISSING_UPLINK");
    setMon(true);
    try {
      const s = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
      if (vRef.current) vRef.current.srcObject = s;
      addLog("UPLINK_ESTABLISHED");
    } catch { setMon(false); addLog("HARDWARE_FAILURE"); }
  };

  const stop = () => {
    setMon(false); setEco(false);
    (vRef.current?.srcObject as MediaStream)?.getTracks().forEach(t => t.stop());
    addLog("CONNECTION_TERMINATED");
  };

  const scan = async () => {
    if (!vRef.current || !cRef.current) return;
    const ctx = cRef.current.getContext('2d');
    cRef.current.width = vRef.current.videoWidth;
    cRef.current.height = vRef.current.videoHeight;
    ctx?.drawImage(vRef.current, 0, 0);
    const b64 = cRef.current.toDataURL('image/jpeg', 0.4).split(',')[1];

    try {
      const r = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${keys.gemini}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ contents: [{ parts: [{ text: "Extract Plate ID or NULL" }, { inline_data: { mime_type: "image/jpeg", data: b64 } }] }] })
      });
      const d = await r.json();
      const txt = d.candidates[0].content.parts[0].text.trim().toUpperCase();
      if (txt !== "NULL") {
        addLog(`DETECTED: ${txt}`);
        if (txt.includes(plate.toUpperCase())) {
          addLog("!!! TARGET_ACQUIRED !!!");
          window.speechSynthesis.speak(new SpeechSynthesisUtterance(`Target confirmed`));
        }
      }
    } catch { console.log("SCAN_ERR"); }
  };

  useEffect(() => {
    const i = mon ? setInterval(scan, 5000) : null;
    return () => { if (i) clearInterval(i); };
  }, [mon, plate]);

  if (!auth) return (
    <div className="min-h-screen bg-[#020405] flex flex-col items-center justify-center p-8 font-mono text-blue-900 overflow-hidden relative">
      {/* MAPA MUNDI DINÂMICO QUE GIRA PARA A POSIÇÃO DO GPS */}
      <div 
        className="absolute inset-0 opacity-10 transition-all duration-[4000ms] ease-in-out pointer-events-none scale-[3]"
        style={{ 
          backgroundImage: `url('https://upload.wikimedia.org/wikipedia/commons/e/ec/World_map_blank_without_borders.svg')`,
          backgroundPosition: `${geo.x}% ${geo.y}%`,
          backgroundSize: 'cover',
          filter: 'invert(1) sepia(1) saturate(5) hue-rotate(190deg) blur(1px)'
        }}
      />
      
      {/* MIRA TÁTICA */}
      <div className="absolute inset-0 flex items-center justify-center pointer-events-none">
        <div className="w-80 h-80 border border-blue-900/20 rounded-full animate-[ping_3s_linear_infinite]" />
        <div className="w-1 h-20 bg-blue-900/10 absolute" />
        <div className="h-1 w-20 bg-blue-900/10 absolute" />
      </div>

      <div className="z-10 flex flex-col items-center">
        <ShieldAlert size={60} className="mb-6 animate-pulse text-blue-800" />
        <h1 className="tracking-[0.8em] text-[10px] mb-12 uppercase font-black">Central Intelligence</h1>
        <input 
          type="password" 
          placeholder="AGENT_ACCESS_KEY" 
          onChange={e => e.target.value === "0000" && setAuth(true)} 
          className="bg-black/90 border border-blue-950 p-4 text-center text-blue-500 outline-none focus:border-blue-600 transition-all backdrop-blur-md" 
        />
        <p className="mt-4 text-[7px] opacity-20 tracking-widest uppercase">Encryption: AES-256 Active</p>
      </div>
    </div>
  );

  return (
    <div className={`min-h-screen ${eco ? 'bg-black' : 'bg-[#020405]'} text-blue-500 font-mono p-4 overflow-hidden relative flex flex-col items-center`}>
      <div className="absolute inset-0 pointer-events-none bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.05)_50%)] bg-[length:100%_4px] z-50"></div>

      {!eco && (
        <div className="w-full max-w-md space-y-4">
          <div className="flex justify-between items-center border-b border-blue-900/20 pb-2">
            <div className="text-[9px] font-bold flex items-center gap-2"><Globe size={12}/> OPS_STATION_ALPHA</div>
            <button onClick={() => setShowSet(!showSet)} className="opacity-30 hover:opacity-100"><Settings size={16}/></button>
          </div>

          {showSet && (
            <div className="grid gap-2 p-3 bg-black/80 border border-blue-950 text-[9px]">
              <input type="password" placeholder="GEMINI_API_KEY" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.gemini} onChange={e => setKeys({...keys, gemini: e.target.value})} />
              <input type="text" placeholder="TG_TOKEN" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.tgToken} onChange={e => setKeys({...keys, tgToken: e.target.value})} />
              <input type="text" placeholder="TG_CHAT" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.tgChat} onChange={e => setKeys({...keys, tgChat: e.target.value})} />
            </div>
          )}

          <input 
            placeholder="INPUT_TARGET_ID" 
            className="w-full bg-[#05080a] border border-blue-900/30 p-6 text-center text-3xl tracking-[0.4em] outline-none text-blue-400 placeholder:opacity-20 uppercase" 
            value={plate} 
            onChange={e => setPlate(e.target.value)} 
          />

          <div className="relative aspect-video bg-black border border-blue-900/10 shadow-[0_0_40px_rgba(0,0,0,0.8)] rounded-sm overflow-hidden">
            <video ref={vRef} autoPlay playsInline className="w-full h-full object-cover opacity-50 grayscale contrast-[1.2]" />
            <canvas ref={cRef} className="hidden" />
            <div className="absolute inset-0 bg-blue-900/5 pointer-events-none"></div>
            {mon && <div className="absolute top-3 left-3 flex items-center gap-2 text-[8px] text-red-800 font-bold animate-pulse"><Zap size={8}/> SATELLITE_LINK_LIVE</div>}
          </div>

          <div className="grid grid-cols-4 gap-2">
            <button onClick={mon ? stop : start} className={`col-span-3 py-5 font-black tracking-widest border transition-all ${mon ? 'border-red-900 text-red-900 bg-red-900/5' : 'border-blue-900 text-blue-600 bg-blue-900/5'}`}>
              {mon ? "TERMINATE_UPLINK" : "ENGAGE_SCANNER"}
            </button>
            <button onClick={() => setEco(true)} disabled={!mon} className="border border-blue-950 flex items-center justify-center opacity-30"><Moon size={20}/></button>
          </div>

          <div className="bg-black/40 border border-blue-950/20 p-4 h-32 overflow-hidden text-[9px] text-blue-900/60 italic font-mono">
            <div className="flex items-center gap-2 mb-2 border-b border-blue-900/10 pb-1 uppercase font-bold tracking-widest"><Terminal size={10}/> Encrypted_Chronicle</div>
            {logs.map((l, i) => <div key={i} className={l.includes("!!!") ? "text-red-700 font-bold animate-pulse" : ""}>{l}</div>)}
          </div>
        </div>
      )}

      {eco && (
        <button onClick={() => setEco(false)} className="fixed inset-0 w-full h-full bg-black z-[100] flex flex-col items-center justify-center gap-4">
          <div className="w-12 h-12 border border-blue-950 rounded-full animate-ping opacity-20"></div>
          <p className="text-[8px] text-zinc-900 tracking-[1.5em] uppercase font-black">Stealth_Mode_Active</p>
        </button>
      )}
    </div>
  );
}
