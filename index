"use client";

import React, { useState, useRef, useEffect } from 'react';
import { ShieldAlert, Settings, Moon, Terminal, Zap, Globe, Lock } from 'lucide-react';

export default function CIA_PlateWatcher() {
  const [auth, setAuth] = useState(false);
  const [mon, setMon] = useState(false);
  const [eco, setEco] = useState(false);
  const [plate, setPlate] = useState("");
  const [keys, setKeys] = useState({ gemini: "", tgToken: "", tgChat: "" });
  const [logs, setLogs] = useState<string[]>([]);
  const [showSet, setShowSet] = useState(false);

  const vRef = useRef<HTMLVideoElement>(null);
  const cRef = useRef<HTMLCanvasElement>(null);

  const addLog = (m: string) => setLogs(p => [`[${new Date().toLocaleTimeString()}] ${m}`, ...p].slice(0, 8));

  const start = async () => {
    if (!plate || !keys.gemini) return addLog("REJECTED: MISSING DATA");
    setMon(true);
    try {
      const s = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
      if (vRef.current) vRef.current.srcObject = s;
      addLog("UPLINK ESTABLISHED");
    } catch { setMon(false); addLog("HARDWARE ERROR"); }
  };

  const stop = () => {
    setMon(false); setEco(false);
    (vRef.current?.srcObject as MediaStream)?.getTracks().forEach(t => t.stop());
    addLog("DISCONNECTED");
  };

  useEffect(() => {
    const i = mon ? setInterval(scan, 5000) : null;
    return () => { if (i) clearInterval(i); };
  }, [mon, plate]);

  const scan = async () => {
    if (!vRef.current || !cRef.current) return;
    const ctx = cRef.current.getContext('2d');
    cRef.current.width = vRef.current.videoWidth;
    cRef.current.height = vRef.current.videoHeight;
    ctx?.drawImage(vRef.current, 0, 0);
    const b64 = cRef.current.toDataURL('image/jpeg', 0.4).split(',')[1];

    try {
      const r = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${keys.gemini}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ contents: [{ parts: [{ text: "Plate ID only or NULL" }, { inline_data: { mime_type: "image/jpeg", data: b64 } }] }] })
      });
      const d = await r.json();
      const txt = d.candidates[0].content.parts[0].text.trim().toUpperCase();
      if (txt !== "NULL") {
        addLog(`ID: ${txt}`);
        if (txt.includes(plate.toUpperCase())) {
          addLog("!!! TARGET ACQUIRED !!!");
          window.speechSynthesis.speak(new SpeechSynthesisUtterance(`Target ${txt}`));
        }
      }
    } catch { console.log("ERR"); }
  };

  if (!auth) return (
    <div className="min-h-screen bg-[#020405] flex flex-col items-center justify-center p-8 font-mono text-blue-900">
      <ShieldAlert size={60} className="mb-4 animate-pulse" />
      <h1 className="tracking-[0.5em] text-xs mb-8">CENTRAL INTELLIGENCE</h1>
      <input type="password" placeholder="AGENT_KEY" onChange={e => e.target.value === "0000" && setAuth(true)} className="bg-black border border-blue-900/30 p-4 text-center outline-none focus:border-blue-600 transition-all" />
      <p className="mt-4 text-[8px] opacity-30 tracking-widest">SECURE LOGIN REQUIRED (PASS: 0000)</p>
    </div>
  );

  return (
    <div className={`min-h-screen ${eco ? 'bg-black' : 'bg-[#020405]'} text-blue-500 font-mono p-4 overflow-hidden relative`}>
      <div className="absolute inset-0 pointer-events-none bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] z-50"></div>

      {!eco && (
        <div className="max-w-md mx-auto space-y-4">
          <div className="flex justify-between items-center border-b border-blue-900/30 pb-2">
            <div className="text-[10px] font-bold flex items-center gap-2"><Globe size={12}/> OPS_ALPHA</div>
            <button onClick={() => setShowSet(!showSet)} className="opacity-40 hover:opacity-100"><Settings size={18}/></button>
          </div>

          {showSet && (
            <div className="grid gap-2 p-4 bg-black border border-blue-900/20 text-[10px]">
              <input type="password" placeholder="GEMINI_KEY" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.gemini} onChange={e => setKeys({...keys, gemini: e.target.value})} />
              <input type="text" placeholder="TG_TOKEN" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.tgToken} onChange={e => setKeys({...keys, tgToken: e.target.value})} />
              <input type="text" placeholder="TG_CHAT" className="bg-transparent border-b border-blue-900 p-1 outline-none" value={keys.tgChat} onChange={e => setKeys({...keys, tgChat: e.target.value})} />
            </div>
          )}

          <input placeholder="TARGET_ID" className="w-full bg-[#05080a] border border-blue-900/40 p-6 text-center text-3xl tracking-[0.3em] outline-none text-blue-400" value={plate} onChange={e => setPlate(e.target.value)} />

          <div className="relative aspect-video bg-black border border-blue-900/20 shadow-[0_0_20px_rgba(0,0,0,1)]">
            <video ref={vRef} autoPlay playsInline className="w-full h-full object-cover opacity-40 grayscale contrast-150" />
            <canvas ref={cRef} className="hidden" />
            {mon && <div className="absolute top-2 left-2 flex items-center gap-2 text-[8px] text-red-700 animate-pulse"><Zap size={8}/> FEED_LIVE</div>}
          </div>

          <div className="grid grid-cols-4 gap-2">
            <button onClick={mon ? stop : start} className={`col-span-3 py-4 font-bold border ${mon ? 'border-red-900 text-red-900' : 'border-blue-900 text-blue-900'}`}>{mon ? "TERMINATE" : "ENGAGE"}</button>
            <button onClick={() => setEco(true)} disabled={!mon} className="border border-blue-900 flex items-center justify-center opacity-40"><Moon size={20}/></button>
          </div>

          <div className="bg-black/50 border border-blue-900/10 p-4 h-32 overflow-hidden text-[9px] text-blue-900 italic">
            <div className="flex items-center gap-2 mb-2 border-b border-blue-900/20 pb-1"><Terminal size={10}/> CHRONICLE_LOG</div>
            {logs.map((l, i) => <div key={i} className={l.includes("!!!") ? "text-red-900 font-bold" : ""}>{l}</div>)}
          </div>
        </div>
      )}

      {eco && <button onClick={() => setEco(false)} className="fixed inset-0 w-full h-full bg-black z-[100] flex items-center justify-center text-[8px] text-zinc-900 tracking-[1em]">SYSTEM_SLEEP_ACTIVE</button>}
    </div>
  );
}
